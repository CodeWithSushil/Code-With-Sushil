{
  "name": "myapp/myapp",
  "type": "project",
  "description": "A Simple web app.",
  "license": "MIT",
  "require": {
    "slim/slim": "^4.13",
    "php-di/php-di": "^7.0",
    "twig/twig": "^3.9",
    "vlucas/phpdotenv": "^5.6",
    "doctrine/dbal": "^4.0",
    "doctrine/orm": "^3.1",
    "symfony/cache": "^7",
    "doctrine/doctrine-migrations-bundle": "^3.3",
    "monolog/monolog": "^3.6"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  },

  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require-dev": {
    "pestphp/pest": "^2.34",
    "symfony/var-dumper": "^7.0"
  },
  "config": {
    "optimize-autoloader": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
